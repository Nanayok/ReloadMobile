<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/login_image"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            />

        <EditText
            android:id="@+id/edittext_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
            android:drawablePadding="16dp"
            android:hint="Email"
            android:padding="8dp"
            android:layout_marginTop="25dp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline_color"
            android:layout_marginLeft="47dp"
            />
<!--        android:layout_marginLeft="47dp"-->
<!--        android:backgrouunderline_colornd="@drawable/edittext_underline"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/password"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/password"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="5dp"
                />



            <EditText
                android:id="@+id/edittext_password_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:hint="Password"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp"
                android:background="@color/white"
                android:inputType="textPassword"
                />
<!--            android:inputType="password"-->

            <ImageView
                android:id="@+id/imageViewPasswordVisibility"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_visibility_off_24"
                android:layout_marginTop="18dp"
                android:layout_alignParentRight="true"

                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline_color"
            android:layout_marginLeft="47dp"
            />

        <TextView
            android:id="@+id/textview_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:textColor="@color/text_view_color"
            />

        <Button
            android:id="@+id/login_Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:text="Log In"
            android:textColor="#FFF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <View
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:background="@color/underline_color"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_view_color"
                android:layout_centerInParent="true"
                />

            <View
                android:layout_width="160dp"
                android:layout_height="1dp"
                android:background="@color/underline_color"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/plain_background"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/google"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                />

<!--            <ImageView-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:src="@drawable/ic_facebook"-->
<!--                android:layout_centerInParent="true"-->
<!--                android:layout_marginTop="10dp"-->
<!--                />-->

<!--            <ImageView-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:src="@drawable/ic_apple"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginRight="80dp"-->
<!--                />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login with Google"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New to Reload?"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/textview_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_view_color"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>