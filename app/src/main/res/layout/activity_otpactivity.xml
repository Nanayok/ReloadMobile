<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOtpPassword"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/otp_image"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            />

        <TextView
            android:id="@+id/textview_otp_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A four digit code has been sent to"
            android:textSize="16sp"
            android:layout_marginTop="40dp"

            />

        <TextView
            android:id="@+id/textview_otp_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="233243314725"
            android:textSize="16sp"
            android:layout_marginTop="5dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/edittext_otp1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="1"
                android:padding="8dp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@color/button_plain_color"/>

            <EditText
                android:id="@+id/edittext_otp2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="2"
                android:padding="8dp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:background="@color/button_plain_color"/>

            <EditText
                android:id="@+id/edittext_otp3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="3"
                android:padding="8dp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:background="@color/button_plain_color"/>

            <EditText
                android:id="@+id/edittext_otp4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="4"
                android:padding="8dp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:background="@color/button_plain_color"/>




        </LinearLayout>







        <Button
            android:id="@+id/Otp_Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background"
            android:text="Submit"
            android:textColor="#FFF" />






    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>